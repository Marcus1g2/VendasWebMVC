

@{
    ViewData["title"] = "Vendas";
}

<h2>
    @ViewData["title"]
</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="MinimaData" class="col-lg-2 control-label">Minima Data</label>
                    <div class="col-lg-10">
                        <input type="date" name="MinimaData" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="MaximaData" class="col-lg-2 control-label">Maxima Data</label>
                    <div class="col-lg-10">
                        <input type="date" name="MaximaData" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaAgrupada">
            <fieldset>
                <legend>Busca Agrupada</legend>
                <div class="form-group">
                    <label for="MinimaData" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="MinimaData" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="MaximaData" class="col-lg-2 control-label">Maxima Data</label>
                    <div class="col-lg-10">
                        <input type="date" name="MaximaData" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>