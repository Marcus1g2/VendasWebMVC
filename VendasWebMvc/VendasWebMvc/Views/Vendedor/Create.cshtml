@model Vendedor
@{
    ViewData["Title"] = "Create"; 
}
<h2> @ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="col-md-6">
                <label asp-for="Nome" class="control-label"> </label>
                <input asp-for="Nome" class="input-control" placeholder="Escreva aqui"/> 
            </div>
            <div class="col-md-6">
                <label asp-for="Data" class="control-label"> </label>
                <input asp-for="Data" class="input-control" placeholder="Escreva aqui" />
            </div>
            <div class="col-md-6">
                <label asp-for="Salario" class="control-label"> </label>
                <input asp-for="Salario" class="input-control" placeholder="Escreva aqui" />
            </div>
            <br />
            <div class="col-md-6">
               <input type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>